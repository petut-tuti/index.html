<script>
// ===== RESET ATTEMPTS =====
function resetAttempts(){
    let passcode = prompt("Enter teacher passcode to reset attempts:");
    if(passcode === "300480"){
        localStorage.removeItem("quizAttempts");
        alert("✅ Attempts counter has been successfully reset.");
    }else if(passcode !== null){
        alert("❌ Incorrect passcode. Access denied.");
    }
}

// ===== QUESTION BANK =====
const QUESTION_BANK = [
{q:"Which organelle is known as the powerhouse of the cell?", options:["Nucleus","Ribosome","Mitochondria","Vacuole"], answer:2},
{q:"What type of energy is stored in food?", options:["Mechanical","Chemical","Electrical","Thermal"], answer:1},
{q:"Which part of the atom has a positive charge?", options:["Neutron","Electron","Proton","Nucleus"], answer:2},
{q:"What process do plants use to make food?", options:["Respiration","Transpiration","Photosynthesis","Digestion"], answer:2},
{q:"What is the SI unit of force?", options:["Joule","Pascal","Newton","Watt"], answer:2},
{q:"Which blood cells fight infection?", options:["Red blood cells","White blood cells","Platelets","Plasma"], answer:1},
{q:"What type of change is burning paper?", options:["Physical change","Chemical change","Reversible change","Temporary change"], answer:1},
{q:"What layer of the Earth is the hottest?", options:["Crust","Mantle","Inner core","Outer core"], answer:2},
{q:"Which gas is most abundant in Earth’s atmosphere?", options:["Oxygen","Carbon dioxide","Nitrogen","Hydrogen"], answer:2},
{q:"What causes earthquakes?", options:["Wind movement","Ocean waves","Movement of tectonic plates","Volcanic ash"], answer:2}
];

// ===== QUIZ LOGIC =====
let current = 0;
let score = 0;

function loadQuestion(){
    const q = QUESTION_BANK[current];
    let html = `
    <h2 class="font-semibold mb-2">Question ${current+1} of ${QUESTION_BANK.length}</h2>
    <p class="mb-3">${q.q}</p>
    `;
    q.options.forEach((opt,i)=>{
        html += `
        <button onclick="checkAnswer(${i})"
        class="block w-full text-left border p-2 rounded mb-2 hover:bg-gray-100">
        ${opt}
        </button>`;
    });
    document.getElementById("quizBox").innerHTML = html;
}

function checkAnswer(choice){
    if(choice === QUESTION_BANK[current].answer){
        alert("✅ Correct!");
        score++;
    }else{
        alert("❌ Wrong!");
    }
    nextQuestion();
}

function nextQuestion(){
    if(current < QUESTION_BANK.length-1){
        current++;
        loadQuestion();
    }else{
        showResult();
    }
}

function prevQuestion(){
    if(current > 0){
        current--;
        loadQuestion();
    }
}

function showResult(){
    document.getElementById("quizBox").innerHTML = `
    <h2 class="text-xl font-bold text-center">Quiz Finished!</h2>
    <p class="text-center mt-2">Your Score: ${score} / ${QUESTION_BANK.length}</p>
    <button onclick="location.reload()" class="mt-4 bg-[#800000] text-white px-4 py-2 rounded block mx-auto">
    Restart Quiz
    </button>
    `;
}

// LOAD FIRST QUESTION
loadQuestion();
</script>

</body>
</html>
